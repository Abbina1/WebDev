<%- include("partials/header"); -%>
<h1>Home</h1>
<p ><%= StartingContent %>
<span > <a href="/editHome">&#9998;</a></span></p>
<button class="btn btn-primary" type="submit" name="newpost" id="newpost"><a style="color:white" href="/compose">Add new post</a></button>
<% posts.forEach(function(val){ %>
    <h1> <%= val.title %> </h1>
    <h6 style="color:lightblue">  Date published : <%= val.date %></h6>
    <p> <%= val.content.substring(0,100) + "..." %> <a href="/posts/<%= val.title %>">Readmore</a></p>
<% }); %>
