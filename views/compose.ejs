<%- include("partials/header"); -%>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="title">Title:</label>
        <input class="form-control" type="text" id="titletext" name="titletext">
        <label for="post">Post:</label>
        <textarea class="form-control" type="text" rows="10" id="posttext" name="posttext"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="publish" id="publish">Publish</button>
</form>
<%- include("partials/footer"); -%>